= form_for(@rider) do |f|
  - if @rider.errors.any?
    #error_explanation
      %h2
        = pluralize(@rider.errors.count, "error")
        prohibited this post from being saved:

      %ul
        - @rider.errors.full_messages.each do |msg|
          %li= msg 

  .field
    = f.label 'Name:'
    %br
    = f.text_field :name 
  .field
    = f.label 'Klasse:'
    %br
    = f.text_field :klasse
  .field
    = f.label 'Verein:'
    %br
    = f.text_field :verein
  .field
    = f.label 'Geburtstag:'
    %br
    = f.date_select :geburtstag, :start_year => Time.now.year - 60, :end_year => Time.now.year
  .field
    = f.label 'Team:'
    %br
    = f.select :team, ['Radverleih-Mallorca@Berner-Bikes.com (Damen)', 'Radvermietung-Mallorca@ Berner Bikes.com (Masters)', 'Rent-a-Bike@Berner-Bikes.com (Elite)']
  .field
    = f.label 'Beschreibung/Erfolge:'
    %br
    = f.text_area :description
  .field
    = f.label 'Bild:'
    %br
    = f.file_field :image 
  .actions
    = f.submit 'Erstellen'