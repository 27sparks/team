= form_for(@rider) do |f|
  - if @rider.errors.any?
    #error_explanation
      %h2
        = pluralize(@rider.errors.count, "error")
        prohibited this post from being saved:

      %ul
        - @rider.errors.full_messages.each do |msg|
          %li= msg 

  .field
    = f.label 'Nachname:'
    %br
    = f.text_field :name
  .field
    = f.label 'Vorname:'
    %br
    = f.text_field :first_name
  .field
    = f.label 'Klasse:'
    %br
    = f.text_field :klasse
  .field
    = f.label 'Verein:'
    %br
    = f.text_field :verein
  .field
    = f.label 'Geburtstag:'
    = f.date_select :geburtstag, :start_year => Time.now.year - 60, :end_year => Time.now.year
  .field
    = f.label 'Team:'
    = f.select :team, [ELITE_TEAM, WOMEN_TEAM, MASTERS_TEAM]
  .field
    = f.label 'Reihenfolge:'
    = f.select :order, (1..6)
  .field
    = f.label 'Erfolge:'
    %br
    = f.text_area :description
  .field
    = f.label 'Bild:'
    = f.file_field :image 
  .actions
    = f.submit 'Erstellen'