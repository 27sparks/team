#rotator_wrapper
  %ul#rotator
    - @posts.take(3).each do |post|
      %li.slide{ :id => post.title }
        .slide_image
          .image= link_to (image_tag post.image_url(:slide).to_s), post_url(post.id)
          .slide_tag
            = post.title
            .logo
              = image_tag 'LogoBerner.png'
              News