#riderslideshow
  %h1.section_header
    = link_to "Team", team_path
    - if can? :create, @rider
      .admin_link_inline= link_to '+', new_rider_path
  .rider_rotator
    - @riders.each do |rider|
      .slidecontainer
        .slide{ :id => rider.name }
          .image= link_to (image_tag rider.image(:medium).to_s), rider_url(rider.id)
          .name_tag
            .rider_logo= image_tag 'LogoBerner.png'
            .rider_name= rider_name(rider)
