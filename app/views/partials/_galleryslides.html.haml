#galleryslideshow
  %h1.section_header
    = link_to "Bilder"
    - if can? :create, @gallery
      .admin_link_inline= link_to '+', new_gallery_path
  .gallery_rotator
    - if (@galleries)
      - @galleries.each do |gallery|
        .slidecontainer
          .slide{ :id => gallery.description }
            .image= link_to (image_tag gallery.image(:medium).to_s), gallery_url(gallery.id)

