%section#news
  %h1.section_header= link_to "News", news_path
  #blocks
    - @posts.where(:topnews => true).take(3).each do |post|
      .news_block
        %h1.block_header= link_to post.title, post_url(post.id)
        =image_tag post.image(:thumb).to_s 
        %p= simple_format(preview(post.body))
        = link_to 'mehr', post_url(post.id)
  #headlines
    - @posts.where(:topnews => false).order_by([:date_published, :asc]).take(6).each do |post|
      .headline
        %ul
          %li.block_header
            %span.date= date2dmy(post.date_published)
            = link_to post.title, post_url(post.id)
            -if post.user
              %span.name
                von
                =post.user.name
      
      