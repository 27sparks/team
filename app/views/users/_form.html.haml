  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this post from being saved:

      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg 

  .field
    = f.label 'Name'
    %br
    = f.text_field :name 
  .field
    = f.label 'Passwort'
    %br
    = f.password_field :password
  .field
    = f.label 'Password best√§tigen'
    %br
    = f.password_field :password_confirmation
 
  .actions
    = f.submit