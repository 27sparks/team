#bilderslideshow
  - if (@galleries)
    - @galleries.each do |gallery|
      .slidecontainer
        .slide{ :id => gallery.description.to_s }
          .image= link_to (image_tag gallery.image(:slide).to_s), gallery_url(gallery.id) 
          .slide_tag
            %h2= gallery.description
            .logo
              = image_tag 'LogoBerner.png'
