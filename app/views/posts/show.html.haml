%p#notice= notice 
%section#news
  %article.news_item
    %h1.article_header= @post.title
    .namedate 
      - if ( @post.user && @post.date_published )
        von
        = @post.user.name
        am
        = date2dmy(@post.date_published)
    .first_image
      = image_tag @post.second_image(:medium).to_s
      %br
      = @post.second_image_tag
    %p
      = simple_format(@post.body)
      .second_image
        = image_tag @post.image(:slide).to_s
        = @post.first_image_tag
