%p#notice= notice 
%section#news
  %article.news_item
    %h1.article_header= @post.title
    .namedate 
      - if ( @post.user && @post.date_published )
        von
        = @post.user.name
        am
        = date2dmy(@post.date_published)
        - if @post.updated_at > @post.created_at
          , Update am
          = date2dmy(@post.updated_at)
    =image_tag @post.image(:medium).to_s 
    %p= simple_format(@post.body)     
    = link_to 'zur News-Seite', news_path
#news_row
  = render 'partials/postblocks'